#!/usr/bin/env bash
#MISE description="Stitch transcripts together and reformat with LLM"
set -euo pipefail

workdir="${1:?usage: mise run audio:stitch <workdir>}"

# Config: transcribe.toml in workdir or peer to input file
# Env override: REFORMAT_MODEL
# Add --skip-reformat to skip LLM reformatting step
uv run transcribe/stitch_transcripts.py "$workdir"
