#!/usr/bin/env bash
#MISE description="Transcribe audio chunks in parallel using OpenAI"
set -euo pipefail

workdir="${1:?usage: mise run audio:transcribe <workdir>}"

# Config: transcribe.toml in workdir or peer to input file
# Env overrides: TRANSCRIBE_MODEL, TRANSCRIBE_JOBS
uv run transcribe/chunks.py "$workdir"
